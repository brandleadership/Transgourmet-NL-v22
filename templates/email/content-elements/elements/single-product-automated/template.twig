{% set element = element is defined ? element : 'single-product-automated' %}
{% if switched is defined and switched == true %}
    {% set order = ['description', 'image'] %}
{% else %}
    {% set order = ['image', 'description'] %}
{% endif %}
{% set padding = ['0 8px 20px 0px', '0 0px 20px 8px'] %}
<table   border="0"   cellpadding="0"
    cellspacing="0" class=" mobile-full-width"
    width="100%"  data-bsi-element="{{ element }}"
    data-bsi-element-part="product">
    <tr>
    <td style="padding-bottom: 20px;">
<table align="left"
    style="border: 1px solid #e5e5e5;"
    bgcolor="#ffffff"
    cellpadding="0"
    cellspacing="0"
    width="100%"
   class="mobile-full-width"
   >
    {% for index, element in order %}
        {% if element == 'image' %}
            <tr>
                <td colspan="3"
                    align="center"
                    valign="top"
                    style="height:168px;">
                    <a href=""
                        target="_blank"
                        style="outline: none;color: #000; text-decoration: underline; border: 0px;">
                        <img alt="BSI"
                            border="0"
                            width="190"
                            src="{{
                            src
                                ?
                                : bsi_cx_asset(
                                    '../../../../../resources/whitelabel/product-list-item1.png'
                                )
                            }}"
                            style="display: block; width: 190px; height: auto;margin-bottom: 20px" />
                    </a>
                </td>
            </tr>
        {% endif %} 
         {% if element == 'description' %}
            <tr>
                <td align="left"  valign="top">
                    <table align="left"
                        bgcolor="#ffffff"
                        border="0"
                        cellpadding="0"
                        cellspacing="0"
                        style="width: 100%;">
                        <tbody>
                            <tr>
                                <td align="left"
                                    style="padding-top:20px;padding-left: 15px;font-weight:bold;">
                                    <a 
                                        style="font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:700; font-style:normal; color: #000000; font-size: 16px;line-height:20px;margin: 0;outline: none;text-decoration: none;"
                                        href="{{ company.website }}{{ trackingLinkSuffix }}"
                                        target="_blank"
                                        data-bsi-product-group="1"
                                        data-bsi-product-name="">
                                        {Quality Geschirspulmittel}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td align="left"
                                    style="padding-bottom:20px;padding-left: 15px;">
                                    <div data-bsi-product-description=""
                                        data-bsi-product-group="{{
                                        productIndex
                                        }}"
                                    
                                        style="font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:400; font-style:normal; color: #000000; font-size: 14px;line-height:16px;margin: 0;">
                                        {ohne Chlor, 10l}
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td align="left"
                                    valign="top"
                                    bgcolor="#ffffff"
                                    style="height:88px;width:278px;padding-left:25px;">
                                    <div 
                                        data-bsi-product-group="1"
                                        data-bsi-product-priceunit=""
                                        style="margin-left:10px;margin-top:10px;font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:700; font-style:normal;color: #e20026;font-size: 16px;text-align: left;line-height:20px;">
                                        {Kg}
                                    </div>
                                    <div style="text-align:center">
                                        <table border="0"
                                            cellpadding="0"
                                            cellspacing="0"
                                            align="center" >
                                            <tbody>
                                                <tr>
                                                    <td style="vertical-align: top;" align="left">
                                                        <div style="display:inline-block;margin:0;font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:bold; font-style:normal;color: #e20026;font-size: 58px;"
                                                            data-bsi-product-group="1"
                                                            data-bsi-product-remove-if-regular-price="">
                                                            <p data-bsi-product-group="1"
                                                                data-bsi-product-special-price-franken="">
                                                                <p style="font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:700; font-style:normal;color: #e20026;font-size: 32px;line-height: 37px;">
                                                                    {4}
                                                                </p>
                                                            </p>
                                                        </div>
                                                    </td>
                                                    <td align="left" style="vertical-align: top; padding-top:0.4em">
                                                        <div style="display:inline-block;text-align: center;font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:bold; font-style:normal;color: #e20026;font-size: 32px;vertical-align: top;"
                                                            data-bsi-product-group="1"
                                                            data-bsi-product-remove-if-regular-price="">
                                                            <p data-bsi-product-group="1"
                                                                data-bsi-product-special-price-rappen="">
                                                                <p style="font-family: 'Transgourmet','Trebuchet MS','sans-serif';font-weight:700; font-style:normal;color: #e20026;line-height:20px;font-size: 16px;vertical-align: top;">
                                                                    {35}
                                                                </p>
                                                            </p>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
          
            </tr>
            
         {% endif %}
    {% endfor %} 
</table>
</td></tr></table>
